<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
tools:context=".ui.ListHolderFragment">

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_gravity="center"
    android:layout_margin="5dp">
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/listNameEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:singleLine="true"
            android:minWidth="180dp"
            android:hint="@string/text_listName" />
    </com.google.android.material.textfield.TextInputLayout>
</LinearLayout>

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_gravity="center">
    <EditText
        android:id="@+id/addITemEditText"
        android:layout_toRightOf="@id/addItemTextView"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="3dp"
        android:hint="@string/text_addItem"
        android:imeOptions="actionDone"
        android:singleLine="true"
        android:layout_gravity="center_vertical" />
    <ImageButton
        android:id="@+id/butAddItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/addITemEditText"
        android:src="@drawable/ic_add"
        android:layout_margin="5dp"
        android:background="@drawable/roundedgenericbutton"
        android:padding="5dp"
        android:elevation="8dp"/>
</LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/butBackground"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="5dp"/>
<ListView
    android:id="@+id/newList"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:drawSelectorOnTop="false"
    android:layout_weight="1"
    />

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_gravity="center">

    <Button
        android:id="@+id/butSaveList"
        android:text="@string/but_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:layout_gravity="center_vertical"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textAllCaps="false"
        android:padding="10dp"
        android:elevation="10dp"
        android:background="@drawable/roundedgenericbutton" />

    <Button
        android:id="@+id/butCancel"
        android:text="@string/but_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:layout_gravity="center_vertical"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textAllCaps="false"
        android:padding="10dp"
        android:elevation="10dp"
        android:background="@drawable/roundedgenericbutton"/>
</LinearLayout>

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center">
    <Button
        android:id="@+id/viewSavedListButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/but_viewSavedLists"
        android:layout_gravity="center_vertical"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:layout_margin="3dp"
        android:textAllCaps="false"
        android:padding="10dp"
        android:elevation="10dp"
        android:background="@drawable/roundedgenericbutton"/>
</LinearLayout>
</LinearLayout>