<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    android:layout_margin="3dp"
    android:elevation="8dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
            <RelativeLayout
                android:id="@+id/listInfoLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="5dp">
                <TextView
                    android:id="@+id/textViewListName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:text="@string/text_listName"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />
                <TextView
                    android:id="@+id/textViewItemsCountVal"
                    android:layout_below="@id/textViewListName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:layout_marginLeft="20dp"
                    android:text="Items count:"
                    android:layout_marginRight="5dp" />
                <TextView
                    android:id="@+id/textViewItems"
                    android:layout_toRightOf="@id/textViewItemsCountVal"
                    android:layout_below="@id/textViewListName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:text="@string/text_items" />
                <TextView
                    android:id="@+id/textViewLastModified"
                    android:layout_below="@id/textViewItemsCountVal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:layout_marginLeft="20dp"
                    android:text="@string/text_last_updated"
                    android:layout_marginRight="5dp"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />
                <TextView
                    android:id="@+id/textViewLastModifiedVal"
                    android:layout_toRightOf="@id/textViewLastModified"
                    android:layout_below="@id/textViewItemsCountVal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:text="101-01-2019"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />
            </RelativeLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="5dp">
                <ImageButton
                    android:id="@+id/buttonEditList"
                    android:padding="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_edit"
                    android:layout_margin="5dp"
                    android:focusable="false"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/roundedgenericbutton"
                    android:elevation="8dp"/>
                <ImageButton
                android:id="@+id/buttonDeleteList"
                android:padding="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_delete"
                android:layout_toRightOf="@id/buttonEditList"
                android:layout_margin="5dp"
                android:focusable="false"
                android:layout_alignParentRight="true"
                android:background="@drawable/roundedgenericbutton"
                android:elevation="8dp"/>
                <ImageButton
                    android:id="@+id/buttonCopyList"
                    android:padding="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_copy"
                    android:layout_toRightOf="@id/buttonDeleteList"
                    android:layout_margin="5dp"
                    android:focusable="false"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/roundedgenericbutton"
                    android:elevation="8dp"/>
            </LinearLayout>
    </LinearLayout>
    <ListView
        android:id="@+id/itemsListView"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:fillViewport="true"
        android:layout_marginLeft="30dp"
        android:visibility="gone"
        android:nestedScrollingEnabled="true"/>
</LinearLayout>